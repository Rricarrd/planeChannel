momentumSource
{
    type            meanVelocityForce;
    fields          (U);
    selectionMode   all;       // Apply to all cells (or use "cellZone" / "cellSet")
  
    Ubar            (0.6666666666666666 0 0);   // Target mean velocity (e.g., 5 m/s in x-direction)

}