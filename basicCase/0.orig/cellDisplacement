FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      cellDisplacement;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 0 0 0 0 0];
internalField   uniform (0 0 0);

boundaryField
{
  bottom
  {
      type        groovyBC;
      value       uniform (0 0 0);
      variables "A=0.01;k=2*pi/5.376237428017917;f=5;ramp=min(time()/15.0, 1.0);";
      valueExpression "pos().x < 0.05 || pos().x > 5.55998688141 ? vector(0,0,0):vector(0,ramp*A*sin(f*time())*sin(k*pos().x),0)";
  }
  
  top
  {
      type        fixedValue;
      value       uniform (0 0 0);
  }
  
  
  
  
      "(inlet|outlet)"
      {
          type            cyclicAMI;
      }
      "(left|right)"
      {
          type        cyclicAMI;
      }
  
  
}
